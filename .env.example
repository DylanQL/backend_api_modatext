# Configuración de la base de datos
DB_HOST=localhost
DB_USER=tu_usuario
DB_PASSWORD=tu_contraseña
DB_NAME=tu_base_de_datos
DB_PORT=3306

# Configuración del servidor
PORT=3000
# HOST=0.0.0.0 para permitir acceso desde cualquier IP
# HOST=localhost para solo acceso local
HOST=0.0.0.0
NODE_ENV=development

# Configuración de CORS
# ALLOWED_ORIGINS=* para permitir cualquier origen
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173 para orígenes específicos
ALLOWED_ORIGINS=*

# Configuración de límites de peticiones
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
